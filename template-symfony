<VirtualHost *:80>
	ServerAdmin auroremartenot@gmail.com
	ServerName template.wrk
	ServerAlias www.template.wrk

	DocumentRoot ~/www/template

	#Configuration spécifique Symfony 3
	<Directory "~/www/template/web">
		Require all granted
		FallbackResource /app.php
	</Directory>

	#Par sécurité, pas de ressource par défaul dan bundles
	<Directory "~/www/template/web/bundles">
		FallbackResource disabled
	</Directory>
</VirtualHost>
